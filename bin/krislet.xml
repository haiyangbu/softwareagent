<?xml version="1.0" encoding="utf-8"?>


<Common>

 <!-- There are 2 modes: reactive or state machine. 
      Please do not use both at the same time -->
 <Runningmode>reactive</Runningmode>
 <!-- Runningmode>statemachine</Runningmode -->


 <ReactiveZones>

  <!-- Zones are areas that divided by different flags 
       on the boarder of a playground. Around each flag,
	   + or - 5 metters is the range of this area.
	   We use bottom flags only, which divided the playground into
	   6 areas. You can group them, and adjust the running and 
	   kicking configuration.
  -->
  <zone>
  <name>L1</name>
  <area_groups>
	  <area>flag b l 50</area>
  </area_groups>

  <run_power>50</run_power>
  <kick_power>100</kick_power>
  </zone>

  <zone>
  <name>L2</name>
  <area_groups>
	  <area>flag b l 40</area>
	  <area>flag b l 30</area>
	  <area>flag b l 20</area>
  </area_groups>

  <run_power>100</run_power>
  <kick_power>50</kick_power>
  </zone>

  <zone>
  <name>L3</name>
  <area_groups>
	  <area>flag b l 10</area>
	  <area>flag b 0</area>
  </area_groups>

  <run_power>100</run_power>
  <kick_power>95</kick_power>
  </zone>
 
  <zone>
  <name>R3</name>
  <area_groups>
	  <area>flag b 0</area>
	  <area>flag b r 10</area>
  </area_groups>

  <run_power>95</run_power>
  <kick_power>100</kick_power>
  </zone>

  <zone>
  <name>R2</name>
  <area_groups>
	  <area>flag b r 20</area>
	  <area>flag b r 30</area>
  </area_groups>

  <run_power>90</run_power>
  <kick_power>50</kick_power>
  </zone>

  <zone>
  <name>R1</name>
  <area_groups>
	  <area>flag b r 40</area>
	  <area>flag b r 50</area>
  </area_groups>

  <run_power>90</run_power>
  <kick_power>100</kick_power>
  </zone>


  <!-- Used to control which goal is the real goal, self or opposite.
       Please do not use both at the same time.
       This is only for reactive mode. -->
  <goal>opposite</goal>
  <!-- goal>self</goal -->


  <!-- Used to control how player handle the ball, kick it or not.
       Please do not use both at the same time.
	   This is only for reactive mode. -->
  <ball>kick</ball>
  <!-- ball>do not kick</ball -->

  </ReactiveZones>


</Common>

